<ehcache>
	<diskStore path="java.io.tmpdir"/>
    <defaultCache
        maxElementsInMemory="1"
        eternal="false"
        timeToIdleSeconds="120"
        timeToLiveSeconds="120"
        overflowToDisk="true"
        />

	<!--  keep objects at maximum of 15 minutes -->
	<cache	name="com.bayerbbs.applrepos.LogonData"
			maxElementsInMemory="500"
			eternal="false" 
			overflowToDisk="true"
	        timeToIdleSeconds="540"
    	    timeToLiveSeconds="540"
	/>
	
	<cache	name="com.bayerbbs.applrepos.airCache"
			maxElementsInMemory="500"
			eternal="false" 
			overflowToDisk="true"
	        timeToIdleSeconds="3600"
    	    timeToLiveSeconds="3600"
	/>


</ehcache>